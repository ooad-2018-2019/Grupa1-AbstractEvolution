<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>loginForma</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Login-Form-Dark.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="login-dark">
        @using (Html.BeginForm("SignIn", "Login")) {
            <form method="post">
                <h2 class="sr-only">Login Form</h2><img class="img-fluid" src="~/img/bluestate.jpg">
                <div class="illustration"></div>
                <div class="form-group"><input class="form-control" type="text" name="etUsername" placeholder="Username"></div>
                <div class="form-group"><input class="form-control" type="password" name="etPassword" placeholder="Password"></div>
                <div class="btn-group" role="group">
                    <button class="btn btn-primary btn-lg" id="btnSignIn" type="submit" style="background: #40A15D; border-top-right-radius: 5px; border-bottom-right-radius: 5px;">Sign in</button>
                    @Html.ActionLink("Sign up", "Index", "RegisterUser", null, new { @class = "btn btn-primary btn-lg", style = "position: relative;background: #40A15D;left: 70px; border-top-left-radius: 5px; border-bottom-left-radius: 5px;", type = "submit" })
                </div>
                
                <div class="btn-group" role="group"></div>
                
                <div class="btn-group" role="group">
                    @Html.ActionLink("Pregledaj nekretnine", "Index", "Nekretnina", null, new { @class = "btn btn-primary btn-lg", style = "position: relative;background: #40A15D;left: 100px; border-top-left-radius: 5px; border-bottom-left-radius: 5px;", type = "submit" })
                </div>
                
            </form>
        }
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>